@model Salon.Models.PersonIndexViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>People</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    Name
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.People) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Award Achievement</a> | 
                <a asp-action="Index" asp-controller="Submission" asp-route-pPersonId="@item.Id">Submissions</a> |
				<a asp-action="SuccessfulImages" asp-controller="Image" asp-route-pPersonId="@item.Id">Accepted Images</a> |
				<a asp-action="AwardedImages" asp-controller="Image" asp-route-pPersonId="@item.Id">Awarded Images</a> |
				<a asp-action="SuccessfulCountries" asp-controller="Country" asp-route-pPersonId="@item.Id">Countries</a> |
                <a asp-action="FiapImages" asp-controller="Image" asp-route-pPersonId="@item.Id">FIAP Submission</a>
            </td>
        </tr>
}
    </tbody>
</table>
